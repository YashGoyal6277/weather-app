</head>
<body>
   {{>navbar}}
    <!-- main-header -->
    <div class="container-fluid main_header">
        <div class="row ">
            <div class="col-md-10 .col-12  mx-auto ">
                <div class="row ">
                    <div class="col-md-6 col-12 main_header_left b">
                    <p>Welcome to AccuWeather</p>
                    <h3>Get the latest <span class="text_color">Weather</span> info of your city</h3>
                    <a href="./weather"><button>Check Now</button></a>
                    </div>
                    <div class="col-md-6 col-12 main_header_right ">
                      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                          <div class="b " > 
                            <div class="carousel-item active">
                              <img src="./images/bg1.webp" class="w-100 h-100" alt="...">
                            </div>
                            <div class="carousel-item">
                              <img src="./images/bg4.png" class="w-100 h-100"  alt="...">
                            </div>
                            <div class="carousel-item">
                              <img src="./images/bg3.jpeg" class="w-100 h-100"  alt="...">
                          </div>
                         
                          </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </button>
                      </div>
                    </div>
                </div>
                
            </div>
                
        </div>
                
    </div>
